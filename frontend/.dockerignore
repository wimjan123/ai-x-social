# Frontend .dockerignore - Optimized for Next.js production builds
# Excludes unnecessary files to reduce build context and improve security

# Git and version control
.git
.gitignore
.gitattributes
.github/

# Documentation (exclude from production builds)
README.md
CHANGELOG.md
LICENSE
*.md
docs/
specs/

# IDE and editor files
.vscode/
.idea/
*.swp
*.swo
*~
.editorconfig

# OS generated files
.DS_Store
.DS_Store?
._*
.Spotlight-V100
.Trashes
ehthumbs.db
Thumbs.db

# Logs and runtime data
npm-debug.log*
yarn-debug.log*
yarn-error.log*
lerna-debug.log*
logs/
*.log
pids/
*.pid
*.seed
*.pid.lock

# Coverage and testing artifacts
coverage/
*.lcov
.nyc_output
test-results/
playwright-report/
lighthouse-report.json

# node_modules (will be installed during build)
node_modules/
jspm_packages/

# Next.js build outputs (will be generated during build)
.next/
out/
dist/
build/

# Environment files (should be mounted or passed as env vars)
.env
.env.local
.env.development
.env.development.local
.env.test
.env.test.local
.env.production
.env.production.local

# Cache directories
.npm
.cache/
.eslintcache
.stylelintcache
.swc/

# Next.js specific caches
.next/cache/

# Temporary files
tmp/
temp/
*.tmp
*.temp

# Security and secrets
secrets/
private/
*.key
*.pem
*.crt
*.p12

# Docker files (avoid recursive builds)
Dockerfile*
docker-compose*.yml
.dockerignore

# Development tools and configs
.prettierrc*
.eslintrc*
jest.config.*
jest.setup.js
playwright.config.*
tsconfig.json
tailwind.config.*
postcss.config.*

# Storybook
.storybook/
storybook-static/

# TypeScript incremental compilation
*.tsbuildinfo

# Development scripts
scripts/dev/
scripts/test/

# Package manager files (keep package.json and package-lock.json)
yarn.lock
pnpm-lock.yaml

# Backup files
*.bak
*.backup

# Development Claude context
.claude/
.specify/

# Vercel deployment
.vercel

# Sentry
.sentryclirc

# Performance monitoring
.lighthouseci/

# E2E test artifacts
tests/e2e/test-results/
tests/e2e/playwright-report/