# Database
DATABASE_URL="postgresql://username:password@localhost:5432/ai_x_social?schema=public"

# Database Connection Pooling
DB_CONNECTION_LIMIT=10
DB_CONNECTION_TIMEOUT=5000
DB_QUERY_TIMEOUT=20000
DB_STATEMENT_TIMEOUT=30000
DB_MAX_WAIT=20000
DB_RETRY_ATTEMPTS=3
DB_RETRY_DELAY=1000

# Redis
REDIS_URL="redis://localhost:6379"

# Redis Configuration
REDIS_KEY_PREFIX="aix:"
REDIS_RETRY_ATTEMPTS=3
REDIS_RETRY_DELAY=200
REDIS_CONNECTION_TIMEOUT=10000
REDIS_COMMAND_TIMEOUT=5000
REDIS_MAX_RETRIES=3

# JWT
JWT_SECRET="your-super-secret-jwt-key-here"
JWT_EXPIRES_IN="7d"

# API Keys
OPENAI_API_KEY="your-openai-api-key"
ANTHROPIC_API_KEY="your-anthropic-api-key"
GOOGLE_API_KEY="your-google-api-key"

# AI Configuration
AI_DEFAULT_MODEL_CLAUDE="claude-3-sonnet-20240229"
AI_DEFAULT_MODEL_OPENAI="gpt-4"
AI_DEFAULT_MODEL_GEMINI="gemini-pro"
AI_DEFAULT_TEMPERATURE=0.7
AI_DEFAULT_MAX_TOKENS=1000
AI_CIRCUIT_BREAKER_FAILURE_THRESHOLD=3
AI_CIRCUIT_BREAKER_TIMEOUT=30000
AI_CIRCUIT_BREAKER_RETRY_AFTER=60000

# News API Keys
NEWS_API_KEY="your-newsapi-key"
GUARDIAN_API_KEY="your-guardian-api-key"
GNEWS_API_KEY="your-gnews-api-key"

# Server Configuration
PORT=3001
NODE_ENV="development"
CORS_ORIGIN="http://localhost:3000"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH="uploads/"

# Logging
LOG_LEVEL="info"